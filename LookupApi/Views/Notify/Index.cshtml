@model dynamic

@{
    ViewBag.Title = "NotifyService";
    Layout = "_Layout";
}

<div class="mt-3 py-3">
    <h4>Notification Service</h4>
    <hr>
    <p class="my-2 py-2">Twilio Notify makes it possible to reach one customer or a million on their preferred channel with 
        just one API call, helping you connect with your users the way they prefer to communicate.</p>
    <p class="my-2 py-2">To learn more, visit <a href="https://www.twilio.com/docs/notify/quickstart/sms">here</a></p>
</div>

<div class="mt-3 py-3">
    <h4>Bind resource</h4>
    <hr>
    <div class="my-3">
        <label for="phoneNumber" class="form-label">Phone number</label>
        <input type="text" id="phoneNumber" class="form-control"/>
    </div>
    <div>
        <button class="btn btn-primary" id="bind-number">Bind</button>
    </div>
</div>


<div class="my-3 py-3">
    <h4>Notification - using identity (1)</h4>
    <hr>
    <div class="my-3">
        <label for="message" class="form-label">Message</label>
        <input type="text" id="message" class="form-control" value="Sample message - @DateTime.Now.ToString("hh:mm:ss.fff")"/>
    </div>
    <div>
        <button class="btn btn-primary" id="notify">Notify</button>
    </div>
</div>

@section scripts {
    <script src="~/js/notify.js" ></script>
}


